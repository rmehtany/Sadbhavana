FROM golang:1.25

WORKDIR /app

# Copy go mod files first for better caching
COPY go.mod go.sum* ./
RUN go mod download 2>/dev/null || true

# Copy source code
COPY . .

# Copy static files
COPY static/ ./static/

# Expose port for the application
EXPOSE 8080

# Development command (will be overridden in docker-compose)
CMD ["go", "run", "."]